+		switch (i) {
+		case SET_INTERFACE_OUT:
+			uac_event[0] = "USB_STATE=SET_INTERFACE";
+			uac_event[1] = "STREAM_DIRECTION=OUT";
+			uac_event[2] = audio->stream_state[STATE_OUT] ?
+				       "STREAM_STATE=ON" : "STREAM_STATE=OFF";
+			break;
+		case SET_INTERFACE_IN:
+			uac_event[0] = "USB_STATE=SET_INTERFACE";
