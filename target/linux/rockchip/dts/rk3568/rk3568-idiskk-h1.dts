/dts-v1/;

#include "rk3568-linkease.dtsi"
#include "../rockchip-drm-vvop.dtsi"

/ {
	compatible = "idiskk,h1", "rockchip,rk3568";
	model = "iDiskk H1";
	aliases {
		lcd-backlight = &lcd_backlight;
	};

	lcd_backlight: lcd-backlight {
		compatible = "gpio-backlight";
		gpios = <&gpio3 RK_PB2 GPIO_ACTIVE_HIGH>;
	};
};

// NETWORK
&gmac0 {
    status = "okay";
};

// USB2 PHY0 port1 USB3_HOST1_D
&u2phy0_host {
	status = "okay";
};

// MULTI_PHY1
// USB3_HOST1 phy &u2phy0_host
&usbhost30 {
	status = "okay";
};

&usbhost_dwc3 {
	status = "okay";
};

// MULTI_PHY2
&sata2 {
	status = "okay";
};

&pwm_leds {
	led-blue {
		label = "blue";
		pwms = <&pwm1 0 50000 0>;
		max-brightness = <255>;
	};
};

&pwm1 {
	status = "okay";
};

&spi2 {
	num-cs = <1>;
	pinctrl-0 = <&spi2m1_cs0 &spi2m1_pins>;
	pinctrl-1 = <&spi2m1_cs0 &spi2m1_pins_hs>;
	status = "okay";
	lcd@0 {
		status = "disabled";
		compatible = "sitronix,st7789v";
		reg = <0>;
		spi-max-frequency = <32000000>;   //SPI时钟32M
		// spi-cpol;
		// spi-cpha;
		rotate = <90>;                    //屏幕旋转90度
		// width = <210>;
		// height = <320>;
		rgb;                           //颜色格式RGB
		fps = <30>;                      //刷新30帧率
		// regwidth = <8>;
		buswidth = <8>;                   //总线宽度8
		pinctrl-names = "default";
		pinctrl-0 = <&spi_lcd_pins>;
		reset-gpios = <&gpio3 RK_PB3 GPIO_ACTIVE_LOW>;
		dc-gpios = <&gpio3 RK_PB4 GPIO_ACTIVE_HIGH>;
		debug = <0>;                     //不开启调试
		backlight = <&lcd_backlight>;
		power-supply = <&vcc3v3_sys>;
	};
	spidev@0 {
		compatible = "rockchip,spidev";
		reg = <0>;
		spi-max-frequency = <50000000>;
		pinctrl-names = "default";
		pinctrl-0 = <&spi_lcd_pins>;
		status = "okay";
	};
};
