/dts-v1/;

#include "rk3568-linkease.dtsi"
#include "rk3568-linkease-pcie30.dtsi"
#include "../rockchip-drm-vvop.dtsi"

/ {
	compatible = "yyy,h1", "rockchip,rk3568";
	model = "YYY H1";
	aliases {
		lcd-backlight = &lcd_backlight;
	};

	pwm-fan {
		compatible = "pwm-fan";
		cooling-levels = <0 0x66 0x88 0xaa 0xcc 0xff>;
		#cooling-cells = <2>;
		fan-supply = <&vcc5v0_sys>;
		pwms = <&pwm2 0 50000 0>;
		status = "disabled";
	};

	fan: gpio-fan {
		compatible = "gpio-fan";
		gpios = <&gpio0 RK_PB6 GPIO_ACTIVE_HIGH>;
		#cooling-cells = <2>;
		gpio-fan,speed-map =
			   <0 0>,
			<1000 0>,
			<2000 1>,
			<3000 1>,
			<4000 1>,
			<5000 1>;
	};

	lcd_backlight: lcd-backlight {
		compatible = "gpio-backlight";
		gpios = <&gpio3 RK_PB2 GPIO_ACTIVE_HIGH>;
	};
};

// USB2 PHY0 port1 USB3_HOST1_D
&u2phy0_host {
	status = "okay";
};

// MULTI_PHY1
// USB3_HOST1 phy &u2phy0_host
&usbhost30 {
	status = "okay";
};

&usbhost_dwc3 {
	status = "okay";
};

// MULTI_PHY2
&pcie2x1 {
	status = "okay";

	pcie@00 {
		reg = <0x00000000 0 0 0 0>;
		#address-cells = <3>;
		#size-cells = <2>;

		rtl8125_1: pcie-eth@10,0 {
			compatible = "pci10ec,8125";
			reg = <0x000000 0 0 0 0>;

			realtek,led-data = <0x22b>;
		};
	};
};

&pwm_leds {
	led-blue {
		label = "blue";
		pwms = <&pwm1 0 50000 0>;
		max-brightness = <255>;
	};
};

&pwm1 {
	status = "okay";
};

&pwm2 {
	pinctrl-0 = <&pwm2m1_pins>;
	status = "disabled";
};

&spi2 {
	num-cs = <1>;
	pinctrl-0 = <&spi2m1_cs0 &spi2m1_pins>;
	pinctrl-1 = <&spi2m1_cs0 &spi2m1_pins_hs>;
	status = "okay";
	lcd@0 {
		status = "disabled";
		compatible = "sitronix,st7789v";
		reg = <0>;
		spi-max-frequency = <32000000>;   //SPI时钟32M
		// spi-cpol;
		// spi-cpha;
		rotate = <90>;                    //屏幕旋转90度
		// width = <172>;
		// height = <320>;
		rgb;                           //颜色格式RGB
		fps = <30>;                      //刷新30帧率
		// regwidth = <8>;
		buswidth = <8>;                   //总线宽度8
		pinctrl-names = "default";
		pinctrl-0 = <&spi_lcd_pins>;
		reset-gpios = <&gpio3 RK_PB3 GPIO_ACTIVE_LOW>;
		dc-gpios = <&gpio3 RK_PB4 GPIO_ACTIVE_HIGH>;
		debug = <0>;                     //不开启调试
		backlight = <&lcd_backlight>;
		power-supply = <&vcc3v3_sys>;
	};
	spidev@0 {
		compatible = "rockchip,spidev";
		reg = <0>;
		spi-max-frequency = <50000000>;
		pinctrl-names = "default";
		pinctrl-0 = <&spi_lcd_pins>;
		status = "okay";
	};
};

&soc_thermal {
	trips {
		cpu_warm: cpu_warm {
			temperature = <50000>;
			hysteresis = <3000>;
			type = "active";
		};

		cpu_hot: cpu_hot {
			temperature = <60000>;
			hysteresis = <3000>;
			type = "active";
		};
	};

	cooling-maps {
		map2 {
			trip = <&cpu_warm>;
			cooling-device = <&fan THERMAL_NO_LIMIT 3>;
		};

		map3 {
			trip = <&cpu_hot>;
			cooling-device = <&fan 4 THERMAL_NO_LIMIT>;
		};
	};
};
