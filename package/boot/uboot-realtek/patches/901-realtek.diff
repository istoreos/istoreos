+
+						break;
+
+					case FW_TYPE_UBOOT: /* 37 */ // 2nd stage bootcode
+#if defined(CONFIG_SECOND_BOOTCODE_SUPPORT) && defined(CONFIG_GOLDENBOOT_SUPPORT)
+						// due to 2nd bootcode run at the same ADDR as 1st, load to other place first
