+	fw_entry_num = fw_desc_table_v1.fw_list_len / sizeof(fw_desc_entry_v1_t);
+	printf("[Info] fw desc table base: 0x%08x, count: %d\n", sata_fw_desc_table_start, fw_entry_num);
