+
+#ifdef CONFIG_SYS_RTK_EMMC_FLASH
+	printf("[Info] fw desc table base: 0x%08x, count: %d\n", fw_desc_table_addr*EMMC_BLOCK_SIZE, fw_entry_num);
+#elif defined(CONFIG_SYS_RTK_NAND_FLASH)
