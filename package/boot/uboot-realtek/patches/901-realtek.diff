+        if (memcmp(empty_mount, part_entry[i].mount_point, sizeof(empty_mount)) != 0) {
+            if (0 == strcmp((char *)part_entry[i].mount_point, nas_root)){
+                int minor_num = i;
+#ifdef CONFIG_SYS_RTK_EMMC_FLASH
+                if (BOOT_EMMC == boot_flash_type)
