+	cmp x1, #0x0
+	bne 1b
+
+	/* Wake up redistributor: kick ProcessorSleep and wait for ChildrenAsleep to be 0 */
+	ldr	w1, [x0, 0x14]
+	mov w2, #0xFFFFFFFD
+	and	x1, x1, x2
+	str	w1, [x0, 0x14]
+	dsb	st
+	isb
+
+	/* Read the GICR_WAKER */
+2:
