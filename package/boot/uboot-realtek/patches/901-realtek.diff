+// EL3 vector table will need to be set up for 1st time.
+// X0:MAGIC, X1:VBAR_XEN, X2:SP_EL3_XEN
+_do_smc_sync:
+	ldr	x3, =XEN_MON_MAGIC
+	cmp	x0, x3
