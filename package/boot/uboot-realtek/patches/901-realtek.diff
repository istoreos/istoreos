+		{
+			;
+		}
+
+		ipc_shm.pov_boot_av_info = SWAPEND32((uint)(uintptr_t) boot_av);
+
+		#ifdef DUBUG_BOOT_AV_INFO
+		dump_boot_av_info(boot_av);
+		#endif
+	}
+
+	/* Flush caches */
+	flush_dcache_all();
+
+#endif /* CONFIG_SYS_RTK_EMMC_FLASH */
+	return RTK_PLAT_ERR_OK;
+}
