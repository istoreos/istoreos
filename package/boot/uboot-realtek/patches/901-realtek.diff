+	if (RTK_PLAT_ERR_OK != ret) {
+		printf(VT100_LIGHT_GREEN"---------------LOAD  BACKUP FW  TABLE ---------------\n"VT100_NONE);
+		_iSPI_base_addr = SPI_RBUS_BASE_ADDR + spi_fw_desc_table_start + 0x8000;
