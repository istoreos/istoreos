+
+#ifdef CONFIG_BOOT_FROM_SPI
+	fwdesc_args_t fwdesc_args = {0};
+	unsigned int _iSPI_base_addr;
+
+        printf("---------------LOAD  NORMAL FW  TABLE ---------------\n");
