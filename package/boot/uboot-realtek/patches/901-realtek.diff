+		/* checksum */
+		if (FW_DESC_BASE_VERSION(fw_desc_version) == 1) {
+			fw_entry_v1 = (fw_desc_entry_v1_t*)fw_desc_ptr;
+			fw_entry_v1->checksum = BE32_TO_CPU(fw_entry_v1->checksum);
+
+			if (fw_desc_version == FW_DESC_TABLE_V1_T_VERSION_11) {
